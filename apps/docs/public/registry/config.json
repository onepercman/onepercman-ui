{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["libraries"],
  "properties": {
    "libraries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "directory": {
            "type": "string"
          },
          "postinstall": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "transformers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["name", "directory", "postinstall", "transformers"]
      }
    }
  }
}
